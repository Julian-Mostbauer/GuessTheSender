@using GTS.Core

<div class="card mb-3 shadow-sm" style="max-width: 100%;">
    <div class="card-body">
        <div class="d-flex flex-row justify-content-between align-items-start flex-wrap">
            <div class="flex-grow-1" style="min-width: 0;">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold">
                        @if (ShowSender)
                        {
                            <span class="@SenderClass">@Message.Sender</span>
                            @if (IsResult && !IsCorrect && !string.IsNullOrEmpty(WrongGuess))
                            {
                                <span class="ms-2 text-danger"><s>@WrongGuess</s></span>
                            }
                        }
                        else
                        {
                            <span class="text-secondary">???</span>
                        }
                    </span>
                    <span class="text-muted small text-nowrap">@Message.Time.ToString("yyyy-MM-dd HH:mm:ss")</span>
                </div>
                <div class="mb-1 text-break" style="word-break: break-word;">
                    <span>@Message.Content</span>
                </div>
            </div>
            @if (OptionsToRight != null)
            {
                <div class="ms-4 flex-shrink-0 d-flex flex-column align-items-start" style="min-width: 180px;">
                    @OptionsToRight
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public Message Message { get; set; } = Message.ExampleMessage;
    [Parameter] public bool ShowSender { get; set; } = true;
    [Parameter] public bool IsCorrect { get; set; } = false;
    [Parameter] public bool IsResult { get; set; } = false;
    [Parameter] public string? WrongGuess { get; set; }
    [Parameter] public RenderFragment? OptionsToRight { get; set; }

    private string SenderClass => IsResult ? (IsCorrect ? "text-success" : "text-danger") : "";
}

