@page "/game"
@inject GTS.AppWeb.Services.MessageService MessageService

<PageTitle>Game</PageTitle>

<h3 class="mb-4">Guess the Sender</h3>

@if (MessageService.Messages == null || MessageService.Messages.Length == 0)
{
    <div class="alert alert-warning">
        <strong>No messages loaded.</strong><br/>
        To get started, please <a href="/GuessTheSender/upload" class="alert-link">upload your message file</a>.
    </div>
    <p class="text-muted">Once your messages are loaded, you'll be able to play the guessing game!</p>
}
else
{
    <GameStack Messages="MessageService.Messages" Senders="MessageService.Senders"/>
}
